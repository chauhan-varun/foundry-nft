pragma solidity ^0.8.18;

import {DeployVibeNft} from "script/DeployVibeNft.s.sol";
import {Test, console2} from "forge-std/Test.sol";

contract DeployVibeNftTest is Test {
    string public s_smiley =
        "data:image/svg+xml;base64,";

    string public s_wink =
        "data:image/svg+xml;base64,";

    DeployVibeNft deployer;

    function setUp() external {
        deployer = new DeployVibeNft();
    }

    function testSvgToBase64() public view {
        string memory smiley = vm.readFile("./img/smile.svg");
        string memory wink = vm.readFile("./img/wink.svg");
        assertEq(s_smiley, deployer.svgToBase64(smiley));
        assertEq(s_wink, deployer.svgToBase64(wink));
    }
}
